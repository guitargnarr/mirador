# Mirador Systems - Docker Environment Configuration
# Copy to .env and customize for your deployment

# Logging
LOG_LEVEL=INFO

# Build metadata
BUILD_DATE=2025-11-10
VCS_REF=main

# Mirador configuration
MIRADOR_CACHE_PATH=/app/cache/mirador_cache.db
MIRADOR_LOG_LEVEL=INFO

# Ollama configuration
OLLAMA_KEEP_ALIVE=600
OLLAMA_NUM_PARALLEL=4
OLLAMA_HOST=http://localhost:11434

# API configuration
API_HOST=0.0.0.0
API_PORT=8000

# Resource limits (adjust for your hardware)
MEMORY_LIMIT=16G
CPU_LIMIT=4

# Norton Healthcare specific (optional)
ORGANIZATION_NAME=Norton Healthcare
DEPLOYMENT_ENV=production
